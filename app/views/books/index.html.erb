
<p><%= flash[:notice] %></p>



<h2>Books</h2>
  <table>
  	<thead>
  		<tr>
  			<th>Title</th>
  			<th>Body</th>
  		</tr>
  	</thead>

  	<body>
  		<% @books.each do |book| %>
  		<tr>
  			<td>
  				<%= book.title %>
  			</td>
  			<td>
  				<%= book.body %>
  			</td>
  			<td>
  				<%=link_to "show", book_path(book.id) %>
  				<%=link_to "edit", edit_book_path(book.id) %>
  				<%= link_to "destroy", book_path(book), method: :delete ,"data-confirm" => "Are you Sure?"%>
  			</td>
  		</tr>
  		<% end %>
  	</body>
  </table>

<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<p>error can't be blank</p>
<% end %>

    <h5>Title</h5>
    <%= f.text_field :title %>

    <h5>Body</h5>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>