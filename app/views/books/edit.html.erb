<% if @book.errors.any? %>
<p>error can't be blank</p>
<% end %>

<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "show", book_path %>
<%= link_to "back", books_path %>